<UserControl x:Class="AODamageMeter.UI.Views.DetailRowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:AODamageMeter.UI.ViewModels"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance viewModels:RowViewModelBase}"
             d:DesignHeight="27" d:DesignWidth="300">
  <Canvas Height="18"
          Background="{StaticResource DarkBlueBrushFaded}">

    <Rectangle Height="18" Canvas.Left="24"
               Fill="{Binding Color, Converter={StaticResource ColorToRowBrushConverter}}">
      <Rectangle.Width>
        <MultiBinding Converter="{StaticResource RowWidthConverter}">
          <Binding Path="PercentWidth"/>
          <Binding Path="ActualWidth" ElementName="MainGrid"/>
        </MultiBinding>
      </Rectangle.Width>
    </Rectangle>

    <TextBlock Height="18" Canvas.Top="2" Canvas.Left="27"
               Text="{Binding FightCharacterName, Mode=OneTime}" />

    <TextBlock Height="18" Canvas.Top="2" Canvas.Right="3"
               Text="{Binding RightText}"/>
  </Canvas>
</UserControl>
